<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.duang.easyecard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent" 
		android:layout_height="1dp" 
		android:background="#50909090" 
		android:layout_marginRight="1dp" 
		android:layout_marginLeft="1dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <com.duang.easyecard.UI.ChangeColorIconWithText
            android:id="@+id/id_indicator_query"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/main_manage"
            hyman:text="@string/manage"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />

        <com.duang.easyecard.UI.ChangeColorIconWithText
            android:id="@+id/id_indicator_lost"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/main_lost_found"
            hyman:text="@string/lost_found"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />

        <com.duang.easyecard.UI.ChangeColorIconWithText
            android:id="@+id/id_indicator_found"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/main_information"
            hyman:text="@string/information"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />

        <com.duang.easyecard.UI.ChangeColorIconWithText
            android:id="@+id/id_indicator_settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/main_settings"
            hyman:text="@string/settings"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:minHeight="40dp"
    android:duplicateParentState="true">

    <TextView
        android:id="@+id/table_view_custom_item_2_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/content_page_large_text" />

    <TextView
        android:id="@+id/table_view_custom_item_2_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        style="@style/table_view_large_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/table_view_custom_item_2_day"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/table_view_large_text"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/table_view_custom_item_2_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:src="@drawable/chevron_default" />
</LinearLayout>

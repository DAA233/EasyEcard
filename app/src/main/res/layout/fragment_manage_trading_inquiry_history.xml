<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ManageTradingInquiryHistoryFragment"
    android:background="@color/background">
    <ScrollView
        android:id="@+id/manage_trading_inquiry_history_pick_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/manage_trading_inquiry_set_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="18"
            android:padding="10dp"
            android:minHeight="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_view_rounded_corner">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/start_time"
                style="@style/table_view_large_text" />

            <TextView
                android:id="@+id/manage_trading_inquiry_start_date"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/table_view_large_text"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/manage_trading_inquiry_start_day"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/table_view_large_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/chevron_default" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_trading_inquiry_set_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="18"
            android:padding="10dp"
            android:minHeight="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_view_rounded_corner">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/end_time"
                style="@style/table_view_large_text" />

            <TextView
                android:id="@+id/manage_trading_inquiry_end_date"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/table_view_large_text"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/manage_trading_inquiry_end_day"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/table_view_large_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/chevron_default" />
            </LinearLayout>
        </LinearLayout>

        <com.rey.material.widget.Button
            android:id="@+id/manage_trading_inquiry_query_button"
            android:layout_marginTop="60dp"
            android:text="@string/query"
            style="@style/button_ripple_wave"
            android:background="@drawable/green_button_selector"/>

    </LinearLayout>
    </ScrollView>

    <com.duang.mypinnedheaderlistview.PinnedHeaderListView
        android:id="@+id/manage_trading_inquiry_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:groupIndicator="@null"/>

    <com.rey.material.widget.ProgressView
        android:id="@+id/manage_trading_inquiry_history_progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
        app:pv_progressMode="indeterminate"/>
    
    <ImageView
        android:id="@+id/manage_trading_inquiry_history_nothing_founded_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="fitCenter" />
</FrameLayout>


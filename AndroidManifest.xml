<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duang.easyecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:name="com.duang.easyecard.GlobalData.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".Activities.SigninActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".Activities.MainActivity"
            android:label="@string/MainActivity_label"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
        <activity 
            android:name=".Activities.ManageBasicInfoActivity"
            android:label="@string/ManageViewBasicInfoActivity_label"
            android:logo="@drawable/manage_basic_info"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
        <activity 
            android:name=".Activities.ManageTradingInquiryActivity"
            android:label="@string/ManageTradingInquiryActivity_label"
            android:logo="@drawable/manage_trading_inquiry"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
        <activity 
            android:name=".Activities.ManageReportLossActivity"
            android:label="@string/ManageReportLossActivity_label"
            android:logo="@drawable/manage_report_loss"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
        <activity
            android:name=".Activities.LostAndFoundInformationBrowsingActivity"
            android:label="@string/LostAndFoundInformationBrowsingActivity_label"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
        <activity
            android:name=".Activities.LostInfoBrowsingViewDetailActivity"
            android:label="@string/LostInfoBrowsingViewDetailActivity_label"
            android:theme="@style/style_titlebar_normal">
        </activity>
        
    </application>

    <application
        android:name="com.duang.easyecard.GlobalData.UrlConstant">
    </application>

</manifest>
